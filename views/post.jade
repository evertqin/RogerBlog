extends post_layout
block post_content
  body
    include ./includes/header-navbar-section
    section#post-body
      .container
        .row
          .col-md-10.col-sm-9.col-xs-9
            .iframeContainer
              - if (post.raw) {
              iframe(src='/blog/post/raw/' + post._id style="width:100%; height: 600px; border: none")
              -}
            .article(id="article" + i)
              .post-content
                .post-heading
                  h6
                    span Posted:&nbsp;
                    - var date = new Date(post.timestamp);
                    span#posted-time!= date.toDateString()
                    span  /
                    - var count = post.comments == undefined ? 0 :post.comments.count();
                    span#num-comments= count
                    span &nbsp;comm.
                  h5#title
                    a(href="#")!= post.title
                    i.fa.fa-pencil-square-o.edit-button
                .post-entry
                  .content.more!= post.content
            .comments
              .sc_wrapper
                .sc_element.sc_divider
                .sc_element.sc_text_seperator(style="white-space:nowrap;")
                  span.line.line-left
                  span.line-text comments
                  span.line.line-right
              form.input_wrapper(action='/blog/post/comments' method='POST')
                .inner
                  input(type='hidden' name='id' value=post._id)
                  .input_name
                    h5 Name (*)
                    input#commenter_name(type='text' name='commenter_name')
                  .input_content
                    h5 Content (*)
                    textarea#commenter_content(type='text' rows=5 name='commenter_content')
                  button#submit_comment.btn.btn-default(type='submit' value='Submit') Post
  footer
    include ./includes/footer_section.jade
