extends post_layout
block post_content
  body
    include ./includes/header-navbar-section
    section#post-body
      .container
        .row
          .col-md-9.col-sm-9.col-xs-9
            .iframeContainer
              - if (post.raw) {
              iframe(src='/blog/post/raw/' + post._id style="width:100%; height: 600px; border: none")
              -}
            .article(id="article" + i)
              .post-content
                .post-heading
                  h6
                    span Posted:&nbsp;
                    - var date = new Date(post.timestamp);
                    span#posted-time!= date.toDateString()
                    span  /
                    //- var count = post.comments == undefined ? 0 :post.comments.length;
                    span#num-comments.disqus-comment-count(data-disqus-url= fullUrl)
                    span &nbsp;comm.
                  h5#title
                    a(href="#")!= post.title
                    i.fa.fa-pencil-square-o.edit-button
                .post-entry
                  .content.more!= post.content
            .comments
              .tel_wrapper
                .tel_element.tel_divider
                .tel_element.tel_text_seperator(style="white-space:nowrap;")
                  span.line.line-left
                  span.line-text comments
                  span.line.line-right
              #disqus_thread
              script.
                /* * * CONFIGURATION VARIABLES * * */
                var disqus_shortname = 'tripplaninfo';
                /* * * DON'T EDIT BELOW THIS LINE * * */
                (function() {
                  var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                  dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
              noscript. Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a> 
    include ./includes/body_scripts.jade            
  footer
    include ./includes/footer_section.jade
