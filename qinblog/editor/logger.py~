#!/cygdrive/c/Python34/python
import logging 

class MongoLogger:
    FORMAT = '%(asctime)-15s %(levelname)s: %(message)s'
    _logger = None
    
    def __init__(self):
        logging.basicConfig(format = self.FORMAT)

        self._logger = logging.getLogger('MongoLogger')
        self._logger.setLevel(20)

    def getLogger(self):
        return self._logger;
