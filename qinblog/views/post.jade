extends post_layout

block post_content
  body
    include ./includes/header-navbar-section
    section#post-body
      .container
        .row
          .col-md-9
            iframe(src='/blog/post/raw/'+post._id margin='0 0 0 0' frameBorder='0' scrolling='no' width='100%' height='800px')
            .article(id="article"+i)
              .post-content
                .post-heading
                  h6
                    span Posted:&nbsp;
                    - var date = new Date(post.timestamp);
                    span#posted-time!= date.toDateString()
                    span  /
                    - var count = post.comments == undefined ? 0 :post.comments.count();
                    span#num-comments= count
                    span &nbsp;comm.
                  h5#title
                    a(href="#")!= post.title
                    i.fa.fa-pencil-square-o.edit-button
                .post-entry
                  .content.more!= post.content
                  
