extends layout

mixin highlight_box(id, name, icon)
    .col-lg-3.col-md-4.col-sm-5
        .box
            .box-gray.aligncenter
                h4(id=id)= name
                .icon
                    i.fa.fa3x(class=icon)
                .box-stat-info
                    span#publish-date May 20
                    span#comments
                        i.fa.fa-comments 1
                    span#shares
                        i.fa.fa-heart 15
            .title-block
                if block
                    block
                else
                    h4 No Content Provided


mixin sample_dummy_text()
    h4 See how your website convert to money


block content
    body
        .social-network-above-navbar
            .social-network-inner
                .social-network-right-panel
                    .social-network-icon.social-network-twitter(data-type="tooltip")
                        a
                            span
                                i.fa.fa-twitter
                    .social-network-icon.social-network-facebook(data-type="tooltip")
                        a
                            span
                                i.fa.fa-facebook
                    .social-network-icon.social-network-email(data-type="tooltip")
                        a
                            span
                                i.fa.fa-envelope-o
        #navigation.header
            nav.navbar.navbar-default.navbar-fixed-top(role="banner")
                .navbar-wrapper
                    .container
                        .navbar-header
                            button(type="button", data-toggle="collapse", data-target=".navbar-collapse").navbar-toggle
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a.navbar-brand(href="#") RogerQin
                        #navigation-items.navbar-collapse.collapse
